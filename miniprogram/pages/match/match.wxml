<block wx:else>
  <view style="font-size: small;font-weight:500;margin-top: 50rpx; margin-bottom:10rpx;margin-left: 20rpx;">已为您匹配到以下行程信息</view>
  <view class="container">
    <view class="card" wx:for="{{matchResult}}" wx:key="this">
      <view class="imgs">
        <view class="info">
          <image class="head" src="{{item.avatarUrl}}"></image>
          <view class="id">{{item.nickName}} </view>

          <view wx:if="{{item.gender==1}}">
            <image class="gender" src="../../icon/img_my_man.png" style="width:40rpx;height:40rpx;" />
          </view>
          <view wx:elif="{{item.gender==2}}">
            <image class="gender" src="../../icon/img_my_woman.png" style="width:40rpx;height:40rpx;" />
          </view>
        </view>
      </view>
      <view>
        <view class="content">
          <image class="img" src="../../icon/picker_icon_index_src.png" style="width:30rpx;height:30rpx;"></image>
          {{item.source}}
        </view>
        <image class="imgpoint" src="../../icon/picker_icon_index_point3.png" style="width:5rpx;height:34rpx;">
        </image>
        <view class="content">
          <image class="img" src="../../icon/picker_icon_index_dst.png" style="width:30rpx;height:30rpx;"></image>
          {{item.destination}}
        </view>
        <view class="time_btn">
          <view class="time">
            <image class="img" src="../../icon/img_icon_time.png" style="width:40rpx;height:40rpx;"></image>
            {{item.time}}
          </view>
          <view class="num">
            <image class="img" src="../../icon/img_icon_num.png" style="width:40rpx;height:40rpx;"></image>
            {{item.num}}
          </view>
          <view class="btn">
            <button bindtap='buttonTap' type='default' round style="  font-size:small;font-weight: 600;" size='mini' data-unique="{{item.unique}}">联系方式</button>
            <modal style="border-radius: 20px;" title="联系方式" hidden="{{item.modalHidden}}" bindconfirm="modalConfirm" bindcancel="modalCandel" data-unique="{{item.unique}}">
              <view class="contact" wx:if="{{item.wechat!=''}}">
                <view>微信：<text selectable='true'>{{item.wechat}}</text></view>
                <view><button size ='mini' bindtap="copy" data-content="{{item.wechat}}"> 复制 </button></view>
              </view>
              <view class="contact" wx:if="{{item.qq!=''}}">
               <view>QQ：<text selectable='true'>{{item.qq}}</text></view>
               <view><button size ='mini' bindtap="copy" data-content="{{item.qq}}"> 复制 </button></view>
              </view>
              <view class="contact" wx:if="{{item.cellphone!=''}}">
               <view>手机：<text selectable='true'>{{item.cellphone}}</text></view>
               <view><button size ='mini' bindtap="copy" data-content="{{item.cellphone}}"> 复制 </button></view>
              </view>
            </modal>
          </view>
        </view>
      </view>
    </view>

  </view>
