<!--index.wxml-->

<block wx:if="{{!hasUserInfo}}">
  <text>Tip: 您还没有设置联系方式/通过学生认证，暂无法使用该功能，请前往个人中心登录！</text>
</block>

<form bindsubmit="formSubmit">
  <!--设置拼车信息-->
  <view class="carpool_info">
    <!-- 设置出发地 -->
    <view class="src">
    <image src="{{bluepointUrl}}" style="width:40rpx;height:40rpx;"></image>
    <picker name="src" bindchange="bindPickerChange1" value="{{index1}}" range="{{location}}">
      <view class="{{src == '从哪儿出发'?'default':'selected'}}">
        {{src}}
      </view>
    </picker>
  </view>
    <!-- 设置目的地 -->
    <view class="dst">
    <image src="{{greenpointUrl}}" style="width:40rpx;height:40rpx;"></image>
    <picker name="dst" bindchange="bindPickerChange2" value="{{index2}}" range="{{location}}">
      <view class="{{dst == '您要去哪儿'?'default':'selected'}}">
        {{dst}}
      </view>
    </picker>
    </view>

    <!-- 设置出发时间 -->
    <view class="timePeople">
     <image src="{{timeUrl}}" style="width:40rpx;height:40rpx;"></image>
    <picker name="time" class='time-picker' mode="multiSelector" bindchange="bindMultiPickerChange" bindtap='pickerTap' bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
      <view class="{{time == '出发时间'?'default':'selected'}}">
        {{time}}
      </view>
    </picker>

    <!-- 设置出发人数 -->
    <view class="people">
     <image src="{{peopleUrl}}" style="width:40rpx;height:40rpx;"></image>
    <picker name="number" bindchange="bindPickerChange3" value="{{index3}}" range="{{nums}}">
      <view class="{{num == '出发人数'?'default':'selected'}}">
        {{num}}
      </view>
    </picker>
    </view>
</view>
</view>

  <view class="btn-area">
  <button type="primary" disabled="{{disable||!hasUserInfo}}" formType="submit">
  发布行程
  </button>
  </view>
</form>